<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bottom_bar_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="8dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格大于 "
                android:textSize="20dip" />

            <EditText
                android:id="@+id/highprice_text"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:digits="1234567890."
                android:hint="输入数值"
                android:text=""
                android:textSize="20dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  时报警  "
                android:textSize="20dip" />

            <Button
                android:id="@+id/high_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingTop="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格小于 "
                android:textSize="20dip" />

            <EditText
                android:id="@+id/lowprice_text"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:digits="1234567890."
                android:hint="输入数值"
                android:text=""
                android:textSize="20dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  时报警  "
                android:textSize="20dip" />

            <Button
                android:id="@+id/low_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingTop="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apikey:"
                android:textSize="20dip" />

            <EditText
                android:id="@+id/api_key_text"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="输入或扫描二维码"
                android:text=""
                android:textSize="20dip" />

            <Button
                android:id="@+id/api_key_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二维码" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingTop="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secret:"
                android:textSize="20dip" />

            <EditText
                android:id="@+id/secret_key_text"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="输入或扫描二维码"
                android:text=""
                android:textSize="20dip" />

            <Button
                android:id="@+id/secret_key_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二维码" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>