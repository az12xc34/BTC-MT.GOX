<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bottom_bar_bg"
    android:orientation="vertical" >
    
    <WebView android:id="@+id/depth_webview"
        android:layout_marginLeft="-80dip"
        android:layout_marginTop="-37dip"
        android:layout_width="fill_parent"
        android:scrollbars="vertical"
        android:layout_height="fill_parent"/>
    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:visibility="gone"
         >

        <TextView
            android:id="@+id/depth_fetch_item_buy_number"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:paddingRight="10dip"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:text="委单量"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/depth_fetch_item_buy_price"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:text="买入价"
            android:paddingRight="10dip"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/depth_fetch_item_sell_price"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:paddingRight="10dip"
            android:text="卖出价"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/depth_fetch_item_sell_number"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:paddingRight="10dip"
            android:text="委单量"
            android:textSize="16dip" />
    </LinearLayout>

    <ListView
        android:visibility="gone"
        android:id="@+id/depthorders"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:scrollbars="none" />

</LinearLayout>